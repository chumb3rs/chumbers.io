{
    "$schema": "https://biomejs.dev/schemas/2.0.0-beta/schema.json",
    "formatter": {
        "enabled": true,
        "formatWithErrors": true,
        "indentWidth": 4,
        "indentStyle": "space",
        "lineWidth": 80
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "jsxQuoteStyle": "single",
            "semicolons": "always"
        }
    },
    "json": {
        "formatter": {
            "trailingCommas": "all"
        }
    },
    "linter": {
        "enabled": true
    },
    "files": {
        "ignoreUnknown": true,
        "includes": [
            "**",
            "!node_modules/**"
        ]
    }
}

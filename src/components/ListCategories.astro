---
import type { CollectionEntry } from 'astro:content';
import ContentTypeSelection from '@/components/ContentTypeSelection';
import { ContentTypeEnum } from '@/data/utils';

type Props = {
    categories: CollectionEntry<'categories'>[];
    activeCategory: String;
};

const { categories, activeCategory = '' } = Astro.props;
---

<div
    class='mt-5 mb-8 flex flex-wrap gap-2 md:gap-4 justify-center w-full md:w-1/2 mx-auto'
>
    {
        categories.map((category) => {
            return (
                <ContentTypeSelection
                    text={category.data.title}
                    slug={category.slug}
                    activeOption={activeCategory}
                    type={ContentTypeEnum.Categories}
                />
            );
        })
    }
</div>

---
import { cn } from '@/utils';
import SelectionButton from '@/components/SelectionButton';

interface Props {
    year: number;
    count: number;
    currentYear?: number;
}

const { year, count, currentYear } = Astro.props;
const isActive = currentYear ? year === currentYear : false;
---

<SelectionButton
    href={`/archive/${year}/1`}
    rootHref='/archive'
    isActive={isActive}
>
    <div class='text-center'>
        <h3
            class={cn(
                'text-2xl font-bold transition-colors duration-200',
                'text-gray-900 dark:text-white group-hover:text-primary',
                isActive && 'text-primary'
            )}
        >
            {year}
        </h3>
        <p
            class={cn(
                'text-sm font-medium transition-colors duration-200',
                'text-gray-600 dark:text-gray-300 group-hover:text-gray-700 dark:group-hover:text-gray-200',
                isActive && 'text-primary/80'
            )}
        >
            {count}
            {count === 1 ? 'post' : 'posts'}
        </p>
    </div>
</SelectionButton>

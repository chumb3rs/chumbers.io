---
import { CldVideoPlayer } from 'astro-cloudinary';
type Props = {
    url: string;
    caption: string;
};

const { url, caption, ...props } = Astro.props;
---

<figure {...Astro.props} class='mt-2 mb-1' {...props}>
    <CldVideoPlayer src={url} class='max-h-[500px] mx-auto' controls />
    <figcaption
        class='italic text-sm md:text-xs text-gray-500 dark:text-gray-400'
    >
        {caption}
    </figcaption>
</figure>

---
import { Image } from 'astro:assets';

type Props = {
    src: string;
    alt: string;
};
const { src, alt = '', ...props } = Astro.props;
---

<figure {...props}>
    <Image
        src={src}
        width={600}
        height={200}
        quality={60}
        format='webp'
        class='max-h-[500px] w-auto dark:bg-white mx-auto'
        alt={alt}
    />
    <figcaption class='italic text-sm md:text-xs'>
        {alt}
    </figcaption>
</figure>

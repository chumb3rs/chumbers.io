---
import { CldImage } from 'astro-cloudinary';

type Props = {
    src: string;
    alt?: string;
};

const { src, alt = '', ...props } = Astro.props;
---

<figure class='flex flex-col justify-center items-center my-6' {...props}>
    <CldImage
        src={src}
        alt={alt}
        class='max-h-[600px] w-auto max-w-full object-contain rounded-lg'
        quality={50}
        sizes='100vw'
    />

    <figcaption class='italic text-sm text-center mt-2'>
        {alt}
    </figcaption>
</figure>

---
import { CldImage } from 'astro-cloudinary';

type Props = {
    src: string;
    alt: string;
};
const { src, alt = '', ...props } = Astro.props;
---

<figure class='flex flex-col justify-center' {...props}>
    <CldImage
        src={src}
        alt={alt}
        crop='fit'
        quality='auto'
        class='max-h-[600px] w-auto rounded-lg'
    />
    <figcaption class='italic text-sm text-center'>
        {alt}
    </figcaption>
</figure>

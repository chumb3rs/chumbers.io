---
type Props = {
    text: string;
    link: string;
};

const { text, link, ...props } = Astro.props;
const isInternalLink = link.startsWith('/');
---

<div class='mt-3 mb-12 text-left' {...props}>
    <a
        href={link}
        class='w-fit border-2 border-primary font-semibold px-6 py-2 rounded-md hover:bg-primary/30 disabled:bg-gray-400 transition duration-500 no-underline'
        target={isInternalLink ? undefined : '_blank'}
        rel={isInternalLink ? undefined : 'noopener noreferrer'}
    >
        {text}
    </a>
</div>

---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
    text: string;
};

const { text, href, class: className, ...props } = Astro.props as Props;

const { pathname } = Astro.url;
const isActive = href === pathname || href === pathname.replace(/\/$/, "");
---

<a
    class:list={[
        className,
        { "underline-magic": isActive },
        {
            "relative overflow-hidden": !isActive,
            'after:content-[""] after:absolute after:left-0 after:bottom-0 after:h-[2px] after:w-0 after:bg-current after:transition-all after:duration-300 hover:after:w-full':
                !isActive,
        },
    ]}
    href={href}
    {...props}
>
    {text}
</a>

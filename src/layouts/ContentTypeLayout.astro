---
import BaseLayout from '@/layouts/BaseLayout';
const { contentType = '', title = '' } = Astro.props;
---

<BaseLayout title={title}>
    <section class='flex flex-col items-center'>
        <a
            href={`/${contentType}`}
            class='text-xl lg:text-3xl font-bold text-center underline--magical inline-block mx-auto font-mono'
            >{`./${contentType.toUpperCase()}`}</a
        >

        <slot />
    </section>
</BaseLayout>

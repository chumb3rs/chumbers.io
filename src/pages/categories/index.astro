---
import ContentTypeLayout from '@/layouts/ContentTypeLayout';
import { getCategories, filterPostsByCategory } from '@/utils';
import ListCategories from '@/components/ListCategories';
import ListPosts from '@/components/ListPosts';

const MAXPOSTS = 6;

const categories = await getCategories();
const posts = await filterPostsByCategory({ max: MAXPOSTS });
---

<ContentTypeLayout contentType='categories' title='Categories'>
    <ListCategories categories={categories} activeCategory='' />
    <ListPosts posts={posts} />
</ContentTypeLayout>

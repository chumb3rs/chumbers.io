{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "verbatimModuleSyntax": true, // enforces import type ...
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@layouts/*": ["src/layouts/*"]
        },
        "plugins": [
            {
                "name": "@astrojs/ts-plugin"
            }
        ]
    }
}
